{% extends 'OCNAOBundle::layout.html.twig' %}

{% block parameter %}class="menuactive2"{% endblock %}
{% block parameter2 %}class="menuactive2"{% endblock %}
{% block parameter3 %}class="menuactive2"{% endblock %}
{% block parameter4 %}class="menuactive2"{% endblock %}

{% block body %}
<br>
<br>
<div class="container">
  <div class="col-md-offset-4 col-md-4">
    <h3>Parametre du compte</h3>
    <br>
    <p>Votre Pseudo: <b>{{ user.username }}</b></p>
    <p>Votre email: <b>{{ user.email }}</b></p>
    <p><a href="/profile/edit">Je ve changer Pseudo ou Email</a></p>
    <p><a href="/profile/change-password">Je ve changer mon mot de passe</a></p>
      <br>

    {% if user.newsletter == true %}
      <form action="{{path('ocnao_profil_newsletter')}}">
          <input type="hidden" name="newsletter" value="false">
          <input class="btn-site-orange" style="width:320px" type="submit" value="Ne plus suivre la newsletter">
      </form>
    {% else %}
        <form action="{{path('ocnao_profil_newsletter')}}">
            <input type="hidden" name="newsletter" value="true">
            <input class="btn-site-orange" style="width:287px" type="submit" value="Suivre la newsletter">
        </form>
    {% endif %}



<br>

<button type="button" class="btn-site-orange"  style="width:287px" data-toggle="modal" data-target="#confirm-delete">Supprimer mon compte</button>

<div class="modal fade" id="confirm-delete">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h3>Confirmation</h3>
            </div>
            <div class="modal-body">
              Etes vous sur de vouloir supprimer votre compte ?
              ceci est definitif
            </div>
            <div class="modal-footer">
              <form action="{{path('ocnao_profil_removeuser')}}">
                <button type="button" class="btn-site-orange" data-dismiss="modal">NON</button>
                <input type="submit" class="btn-site" value="supprimer">
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>

<div class="container"> <!-- A supprimer a la fin du dev -->
  <h3>Dev Admin</h3>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
      <p>etape 1 </p>
        <a href="{{ path('ocnao_profil_adm') }}">devenir administrateur</a>
      <p>etape 2 </p>
      <a href="{{ path('fos_user_security_logout') }}">DÃ©connexion</a>
{% endif %}
</div>


{% endblock %}
