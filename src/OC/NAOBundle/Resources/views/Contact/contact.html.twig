{% extends 'OCNAOBundle::layout.html.twig' %}

{% block body %}
<div class="container">
  <div class="col-sm-offset-3">
    <div class="row">
      <div class="col-sm-offset-2 col-sm-4">
        <h1 class"">Nous Contacter</h1>
        <br>
      </div>
    </div>
    <div class="row">

      {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

      {# Les erreurs générales du formulaire. #}
      {{ form_errors(form) }}


      <div class="form-group">
        {{ form_label(form.name, "Nom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.name) }}
        <div class="col-sm-4">
          {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.prename, "Prénom", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.prename) }}
        <div class="col-sm-4">
          {{ form_widget(form.prename, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.email, "Votre Email", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.email) }}
        <div class="col-sm-4">
          {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.object, "Objet du messsage", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.object) }}
        <div class="col-sm-4">
          {{ form_widget(form.object, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>
      <div class="form-group">
        {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        {{ form_errors(form.message) }}
        <div class="col-sm-4">
          {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
        </div>
      </div>

      <div class="col-md-offset-5 col-sm-4">
          {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
      </div>


      {{ form_rest(form) }}
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
